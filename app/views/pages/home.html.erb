<%= simple_form_for(@restaurant, url: restaurants_path, method: :get) do |f| %>
  <div class="form-group">
    <%= f.input :name, placeholder: 'Name of the restaurant' %>
  </div>
  <div class="form-group">
    <%= f.input :address, placeholder: 'Address of the restaurant' %>
  </div>
  <div class="form-group">
    <%= f.input :price_indication, collection: ["€", "€€", "€€€", "€€€€"] %>
  </div>
  <%= f.submit "Go", value: "restaurant_search" %>
<% end %>

<div class="banner" style=" ">
  <div class="header">
    <h2>AIRBNBIM</h2>
    <div class="banner-content text-center d-flex">
      <input class="form-control-banner" type="text" placeholder="Address..." aria-label="Search">
      <select class="form-control-banner" type="text" placeholder="Cuisine type" aria-label="Search">
        <option>Italian</option>
        <option>French</option>
        <option>American</option>
        <option>Asian</option>
        <option>Belgian</option>
      </select>
      <input class="form-control-banner" type="datetime-local" placeholder="All addresses" aria-label="Search">
      <select class="form-control-banner" type="text" placeholder="Number of persons" aria-label="Search">
        <option>1</option>
        <option>2</option>
        <option>3</option>
      </select>
      <a class="btn btn-flat" href="#restaurants">Go</a>
    </div>
  </div>
</div>
<div class="container">
  <div class="card-grid justify-content-center" >
    <% @restaurants.each do |restaurant| %>
      <div class="card-resto">
        <%= cl_image_tag(restaurant.images.first.cloudinary_url, width: 400, height: 300, crop: :fit) %>
        <div class="card-resto-infos" style="text-decoration: none;">
          <h2><%= link_to restaurant.name, restaurant_path(restaurant), class: "text-dark" %></h2>
          <div class="card-resto-pricing">
            <p> <%= restaurant.price_indication %></p>
          </div>
        </div>
        <div class="card-resto-content">
          <p><%= truncate(restaurant.content, :length => 80) %></p>
        </div>
        <div class="card-resto-category">
          <p><%= restaurant.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
