<div class="booking_form">
  <%= simple_form_for [@restaurant, @restaurant.bookings.new] do |f| %>
    <div class="form-group">
      <%= f.input :participants, collection: [1, 2, 3, 4, 5, 6, 7, 8], prompt: "Number of participants" %>
    </div>
    <div class="form-group">
      <%= f.input :date %>
    </div>
    <%= f.submit "Add a booking" %>
  <% end %>
</div>
